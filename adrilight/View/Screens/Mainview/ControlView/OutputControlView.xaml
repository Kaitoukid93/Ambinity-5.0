                                                                                                            Value="Collapsed" />
                                                                                                    <Style.Triggers>
                                                                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border,AncestorLevel=2}, Path=IsMouseOver}"
                                                                                                                     Value="False">
                                                                                                            <Setter Property="Visibility"
                                                                                                                    Value="Visible" />
                 
                                                                                                        </DataTrigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </Grid.Style>
                                                                                            <Image Stretch="Uniform"
                                                                                                   Source="{Binding LocalPath}" />
                                                                                        </Grid>

                                                                                        <Grid>
                                                                                            <Grid.Style>
                                                                                                <Style TargetType="Grid">
                                                                                                    <Setter Property="Visibility"
                                                                                                            Value="Collapsed" />
                                                                                                    <Style.Triggers>
                                                                                                        <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Border,AncestorLevel=2}, Path=IsMouseOver}"
                                                                                                                     Value="True">
                                                                                                            <Setter Property="Visibility"
                                                                                                                    Value="Visible" />
                                    
                                                                                                        </DataTrigger>
                                                                                                    </Style.Triggers>
                                                                                                </Style>
                                                                                            </Grid.Style>
                                                                                            <Image Stretch="Uniform"
                                                                                                   Source="{Binding Bitmap}"/>
                                                                                        </Grid>
                                                                                    </Grid>

                                                                                </Border>
                                                                                <CheckBox IsChecked="{Binding IsChecked}"
                                                                                          Margin="2"
                                                                                          Background="{DynamicResource PrimaryBrush}"
                                                                                          BorderThickness="0"
                                                                                          HorizontalAlignment="Right"
                                                                                          VerticalAlignment="Top">
                                                                                    <CheckBox.Style>
                                                                                        <Style TargetType="CheckBox"
                                                                                               BasedOn="{StaticResource CheckBoxBaseStyle}">
                                                                                            <Setter Property="Visibility"
                                                                                                    Value="Collapsed" />
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid,AncestorLevel=1}, Path=IsMouseOver}"
                                                                                                             Value="True">
                                                                                                    <Setter Property="Visibility"
                                                                                                            Value="Visible" />
                                                                                                </DataTrigger>
                                                                                                <DataTrigger Binding="{Binding IsChecked}"
                                                                                                             Value="True">
                                                                                                    <Setter Property="Visibility"
                                                                                                            Value="Visible" />
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </CheckBox.Style>
                                                                                </CheckBox>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                        <DataTemplate DataType="{x:Type parameterValues:ChasingPattern}">
                                                                            <Grid>
                                                                                <Border Effect="{DynamicResource EffectShadow1}"
                                                                                        Background="{DynamicResource SecondaryRegionBrush}"
                                                                                        ToolTip="{Binding Description}"
                                                                                        CornerRadius="2">
                                                                                    <TextBlock Margin="5"
                                                                                               Style="{DynamicResource TextBlockDefault}"
                                                                                               Text="{Binding Name}" />
                                                                                </Border>
                                                                                <CheckBox IsChecked="{Binding IsChecked}"
                                                                                          Margin="2"
                                                                                          Background="{DynamicResource PrimaryBrush}"
                                                                                          BorderThickness="0"
                                                                                          HorizontalAlignment="Right"
                                                                                          VerticalAlignment="Top">
                                                                                    <CheckBox.Style>
                                                                                        <Style TargetType="CheckBox"
                                                                                               BasedOn="{StaticResource CheckBoxBaseStyle}">
                                                                                            <Setter Property="Visibility"
                                                                                                    Value="Collapsed" />
                                                                                            <Style.Triggers>
                                                                                                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=Grid,AncestorLevel=1}, Path=IsMouseOver}"
                                                                                                             Value="True">
                                                                                                    <Setter Property="Visibility"
                                                                                                            Value="Visible" />
                                                                                                </DataTrigger>
                                                                                                <DataTrigger Binding="{Binding IsChecked}"
                                                                                                             Value="True">
                                                                                                    <Setter Property="Visibility"
                                                                                                            Value="Visible" />
                                                                                                </DataTrigger>
                                                                                            </Style.Triggers>
                                                                                        </Style>
                                                                                    </CheckBox.Style>
                                                                                </CheckBox>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </ListBox.Resources>
                                                                    <ListBox.ItemsPanel>
                                                                        <ItemsPanelTemplate>
                                                                            <WrapPanel Orientation="Horizontal">
                                                                            </WrapPanel>
                                                                        </ItemsPanelTemplate>
                                                                    </ListBox.ItemsPanel>
                                                                </ListBox>
                                                            </Border>
                                                        </Grid>
                                                        <!--subParam-->
                                                        <Grid Margin="10,0,15,10"
                                                              Visibility="{Binding ShowMore,Converter={StaticResource Boolean2VisibilityConverter}}">

                                                            <ItemsControl x:Name="subParamList"
                                                                          Margin="40,0,0,0"
                                                                          ItemsSource="{Binding SubParams}">
                                                                <ItemsControl.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <StackPanel />
                                                                    </ItemsPanelTemplate>
                                                                </ItemsControl.ItemsPanel>
                                                                <ItemsControl.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <ContentControl Content="{Binding}">
                                                                            <ContentControl.Style>
                                                                                <Style TargetType="{x:Type ContentControl}">
                                                                                    <Style.Triggers>
                                                                                        <DataTrigger Binding="{Binding Path=Template}"
                                                                                                     Value="{x:Static enums:ModeParameterTemplateEnum.PushButtonAction}">
                                                                                            <Setter Property="ContentTemplate"
                                                                                                    Value="{DynamicResource _buttonSubParamTemplate}" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Path=Template}"
                                                                                                     Value="{x:Static enums:ModeParameterTemplateEnum.ValueSlider}">
                                                                                            <Setter Property="ContentTemplate"
                                                                                                    Value="{DynamicResource _sliderSubParamTemplate}" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Path=Template}"
                                                                                                     Value="{x:Static enums:ModeParameterTemplateEnum.ToggleOnOff}">
                                                                                            <Setter Property="ContentTemplate"
                                                                                                    Value="{DynamicResource _toggleSubParamTemplate}" />
                                                                                        </DataTrigger>
                                                                                        <DataTrigger Binding="{Binding Path=Template}"
                                                                                                     Value="{x:Static enums:ModeParameterTemplateEnum.ListSelection}">
                                                                                            <Setter Property="ContentTemplate"
                                                                                                    Value="{DynamicResource _listSelectionSubParamTemplate}" />
                                                                                        </DataTrigger>
                                                                                    </Style.Triggers>
                                                                                </Style>
                                                                            </ContentControl.Style>
                                                                        </ContentControl>
                                                                    </DataTemplate>
                                                                </ItemsControl.ItemTemplate>
                                                            </ItemsControl>
                                                        </Grid>
                                                    </StackPanel>
                                                </Grid>
                                            </Border>
                                        </hc:TransitioningContentControl>
                                    </Grid>
                                </StackPanel>
                            </Grid>
                        </hc:TransitioningContentControl>
                    </DataTemplate>
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <hc:TransitioningContentControl TransitionMode="Left2RightWithFade">

        <hc:ScrollViewer IsInertiaEnabled="True"
                         hc:ScrollViewerAttach.Orientation="Vertical"
                         HorizontalScrollBarVisibility="Hidden"
                         VerticalScrollBarVisibility="Auto">
            <Grid Margin="0,0,15,0">

                <StackPanel>
                    <!--info zone-->
                    <Border  Effect="{DynamicResource EffectShadow1}"
                             Margin="0,0,0,5"
                             Padding="10"
                             CornerRadius="4"
                             Background="{DynamicResource MainContentBackgroundBrush}">
                        <StackPanel>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="{Binding SelectedControlZone.Name}"
                                           FontWeight="SemiBold"
                                           Style="{DynamicResource TextBlockDefaultPrimary}" />
                                <Grid Grid.Column="1">
                                    <Button Style="{DynamicResource _defaultIconButton}"
                                            Grid.Column="1"
                                            Background="{DynamicResource SecondaryRegionBrush}"
                                            HorizontalAlignment="Right"
                                            Click="ButtonExport_Click"
                                            x:Name="ExportButton"
                                            Margin="0,0,5,0"
                                            ToolTip="Share this effect"
                                            hc:IconElement.Geometry="{DynamicResource export}" />
                                    <Popup Effect="{DynamicResource EffectShadow1}"
                                           Placement="Right"
                                           PlacementTarget="{Binding ElementName=ExportButton}"
                                           AllowsTransparency="True"
                                           Grid.Column="2"
                                           Grid.ColumnSpan="2"
                                           HorizontalOffset="-10"
                                           x:Name="PopupExport"
                                           VerticalOffset="-15"
                                           StaysOpen="False">
                                        <hc:TransitioningContentControl Effect="{DynamicResource EffectShadow1}"
                                                                        TransitionMode="Right2Left">
                                            <Border Margin="15,15,5,15"
                                                    Background="{DynamicResource SecondaryRegionBrush}"
                                                    CornerRadius="4">
                                                <StackPanel Orientation="Horizontal">
                                                    <Button Background="Transparent"
                                                            Command="{Binding OpenCreateNewLightingProfileWindowCommand}"
                                                            CommandParameter="save"
                                                            BorderThickness="0"
                                                            Content="Save as" />
                                                    <hc:Divider Margin="0"
                                                                Orientation="Vertical"
                                                                LineStroke="{StaticResource RegionBrush}">
                                                    </hc:Divider>
                                                    <Button Background="Transparent"
                                                            BorderThickness="0"
                                                            Command="{Binding ExportItemForOnlineStoreCommand}"
                                                            CommandParameter="{Binding SelectedControlZone.CurrentActiveControlMode}"
                                                            Content="Store Export" />
                                                </StackPanel>
                                            </Border>
                                        </hc:TransitioningContentControl>
                                    </Popup>
                                </Grid>
                            </Grid>
                            <Grid Height="5">
                            </Grid>
                            <Grid Name="AvailableControlMode">
                                <GroupBox  Style="{StaticResource GroupBoxOriginal}"
                                           hc:TitleElement.TitlePlacement="Left">
                                    <GroupBox.HeaderTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <TextBlock FontWeight="SemiBold"
                                                           Text="HIỆU ỨNG ĐANG CHẠY" />
                                                <TextBlock MaxWidth="150"
                                                           Margin="0,5,0,0"
                                                           HorizontalAlignment="Left"
                                                           TextWrapping="Wrap"
                                                           Style="{StaticResource TextBlockDefaultSecLight}"
                                                           Text="{Binding DataContext.SelectedControlZone.CurrentActiveControlMode.Description, RelativeSource={RelativeSource AncestorType=GroupBox}}" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </GroupBox.HeaderTemplate>
                                    <Grid HorizontalAlignment="Right"
                                          x:Name="mode_selection">
                                        <Button  MaxHeight="60"
                                                 Effect="{DynamicResource EffectShadow1}"
                                                 Background="{DynamicResource SecondaryRegionBrush}"
                                                 Padding="10,10"
                                                 hc:BorderElement.CornerRadius="4"
                                                 Margin="0,5,5,5"
                                                 Click="ButtonMode_OnClick"
                                                 BorderThickness="0"
                                                 hc:BackgroundSwitchElement.MouseHoverBackground="{DynamicResource ButtonHoverBrush}"
                                                 hc:BackgroundSwitchElement.MouseDownBackground="{DynamicResource HoverBrush}"
                                                 Style="{DynamicResource ButtonCustom}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="auto" />
                                                </Grid.ColumnDefinitions>
                                                <Border Effect="{DynamicResource EffectShadow1}"
                                                        CornerRadius="4"
                                                        Background="{DynamicResource ButtonHoverBrush}">
                                                    <Path Stretch="Uniform"
                                                          Margin="5"
                                                          Data="{Binding SelectedControlZone.CurrentActiveControlMode.Geometry,Converter={converters:StaticResourceConverter}}"
                                                          Width="25"
                                                          Height="25"
                                                          Fill="{DynamicResource PrimaryTextBrush}" />
                                                </Border>
                                                <TextBlock  Style="{DynamicResource TextBlockSubTitle}"
                                                            Margin="10,0,5,0"
                                                            Grid.Column="1"
                                                            Text="{Binding SelectedControlZone.CurrentActiveControlMode.Name}" />
                                                <ToggleButton Margin="0,2,0,0"
                                                              IsHitTestVisible="False"
                                                              Grid.Column="2"
                                                              IsChecked="{Binding ElementName=PopupMode,Path=IsOpen}"
                                                              HorizontalAlignment="Right"
                                                              Style="{DynamicResource ToggleButtonIconTransparent}"
                                                              hc:IconSwitchElement.Geometry="{DynamicResource showMore}"
                                                              hc:IconElement.Height="10"
                                                              hc:IconElement.Width="10"
                                                              hc:IconSwitchElement.GeometrySelected="{DynamicResource showLess}">
                                                </ToggleButton>
                                                <Popup Effect="{DynamicResource EffectShadow1}"
                                                       AllowsTransparency="True"
                                                       Grid.Column="2"
                                                       Grid.ColumnSpan="2"
                                                       HorizontalOffset="15"
                                                       Name="PopupMode"
                                                       VerticalOffset="6"
                                                       StaysOpen="False">
                                                    <hc:TransitioningContentControl Effect="{DynamicResource EffectShadow1}"
                                                                                    TransitionMode="Top2Bottom">
                                                        <Border Margin="15,15,5,15"
                                                                Background="{DynamicResource SecondaryRegionBrush}"
                                                                CornerRadius="7">
                                                            <ListBox     SelectionChanged="NewModeSelected"
                                                                         x:Name="lightingmode_selection"
                                                                         ItemContainerStyle="{DynamicResource _listBoxGeneralModeSelectionStyle}"
                                                                         Background="Transparent"
                                                                         BorderThickness="0"
                                                                         Margin="0,0,0,7"
                                                                         ItemsSource="{Binding SelectedControlZone.AvailableControlMode,Mode=TwoWay}"
                                                                         Style="{DynamicResource StackPanelVerticalListBox}">
                                                                <ListBox.ItemsPanel>
                                                                    <ItemsPanelTemplate>
                                                                        <StackPanel>
                                                                        </StackPanel>
                                                                    </ItemsPanelTemplate>
                                                                </ListBox.ItemsPanel>
                                                                <ListBox.ItemTemplate>
                                                                    <DataTemplate>
                                                                        <Grid>
                                                                            <Grid.ColumnDefinitions>
                                                                                <ColumnDefinition Width="auto" />
                                                                                <ColumnDefinition Width="*" />
                                                                            </Grid.ColumnDefinitions>
                                                                            <Path HorizontalAlignment="Left"
                                                                                  Stretch="Uniform"
                                                                                  Margin="10"
                                                                                  Data="{Binding Geometry,Converter={converters:StaticResourceConverter}}"
                                                                                  Width="25"
                                                                                  Height="25"
                                                                                  Fill="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type ListBoxItem}}}" />
                                                                            <StackPanel Grid.Column="1">
                                                                                <TextBlock HorizontalAlignment="Left"
                                                                                           Margin="5,10,10,2"
                                                                                           Text="{Binding Name}"
                                                                                           FontSize="14"
                                                                                           FontWeight="SemiBold"
                                                                                           Style="{DynamicResource TextBlockDefault}" />
                                                                                <TextBlock HorizontalAlignment="Left"
                                                                                           Margin="5,0,10,10"
                                                                                           Text="{Binding Description}"
                                                                                           FontSize="13"
                                                                                           Style="{DynamicResource TextBlockDefaultSecLight}" />
                                                                            </StackPanel>



                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </ListBox.ItemTemplate>
                                                            </ListBox>
                                                        </Border>
                                                    </hc:TransitioningContentControl>
                                                </Popup>
                                            </Grid>
                                        </Button>
                                    </Grid>
                                </GroupBox>
                            </Grid>
                        </StackPanel>
                    </Border>
                    <Grid>
                        <ItemsControl x:Name="paramList"
                                      Margin="0,0,0,0"
                                      ItemsSource="{Binding SelectedControlZone.CurrentActiveControlMode.Parameters,Mode=TwoWay,IsAsync=True}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <VirtualizingStackPanel IsVirtualizing="True"
                                                            VirtualizationMode="Recycling" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding}">
                                        <ContentControl.Style>
                                            <Style TargetType="{x:Type ContentControl}">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Path=Template}"
                                                                 Value="{x:Static enums:ModeParameterTemplateEnum.ValueSlider}">
                                                        <Setter Property="ContentTemplate"
                                                                Value="{DynamicResource _sliderParamTemplate}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=Template}"
                                                                 Value="{x:Static enums:ModeParameterTemplateEnum.ListSelection}">
                                                        <Setter Property="ContentTemplate"
                                                                Value="{DynamicResource _listSelectionParamTemplate}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=Template}"
                                                                 Value="{x:Static enums:ModeParameterTemplateEnum.ToggleOnOff}">
                                                        <Setter Property="ContentTemplate"
                                                                Value="{DynamicResource _toggleParamTemplate}" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Path=Template}"
                                                                 Value="{x:Static enums:ModeParameterTemplateEnum.PushButtonAction }">
                                                        <Setter Property="ContentTemplate"
                                                                Value="{DynamicResource _buttonParamTemplate}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>
                                    </ContentControl>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        <Border Background="{DynamicResource DarkOpacityBrush}"
                                Visibility="{Binding IsLoadingControlMode,Mode=TwoWay,Converter={StaticResource Boolean2VisibilityConverter}}">
                        </Border>
                        <Grid Visibility="{Binding IsLoadingControlMode,Mode=TwoWay,Converter={StaticResource Boolean2VisibilityConverter}}">
                            <hc:LoadingLine  VerticalAlignment="Center"
                                             Height="20"
                                             Width="100" />
                        </Grid>
                    </Grid>
                </StackPanel>
            </Grid>
        </hc:ScrollViewer>
    </hc:TransitioningContentControl>
</UserControl>