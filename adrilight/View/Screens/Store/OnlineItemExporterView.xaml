                                            <!--<hc:Divider Margin="20,0,10,0" LineStrokeThickness="1" LineStroke="{DynamicResource BorderBrush}" Orientation="Vertical" MaxHeight="60"/>-->
                                            <Grid>
                                                <Button BorderThickness="0"
                                                        Height="auto"
                                                        Padding="10"
                                                        Style="{DynamicResource ButtonDefault}">
                                                    <Grid>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="auto" />
                                                            <RowDefinition Height="auto" />
                                                        </Grid.RowDefinitions>

                                                        <TextBlock HorizontalAlignment="Center"
                                                                   Margin="2"
                                                                   Text="{Binding CurrentItemForExport.Type}"
                                                                   Style="{DynamicResource TextBlockTitleBold}" />
                                                        <TextBlock HorizontalAlignment="Center"
                                                                   Grid.Row="1"
                                                                   Margin="2"
                                                                   Text="Hạng mục"
                                                                   Style="{DynamicResource TextBlockDefault}" />
                                                    </Grid>
                                                </Button>

                                            </Grid>
                                            <hc:Divider Margin="10,0"
                                                        LineStrokeThickness="1"
                                                        LineStroke="{DynamicResource BorderBrush}"
                                                        Orientation="Vertical"
                                                        MaxHeight="60" />
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto" />
                                                    <RowDefinition Height="auto" />
                                                </Grid.RowDefinitions>
                                                <Grid>
                                                    <StackPanel Orientation="Horizontal">

                                                        <Grid>
                                                            <hc:CheckComboBox BorderThickness="0"
                                                                              ItemsSource="{Binding OnlineItemSelectableTargetType}"
                                                                              Background="{DynamicResource DarkOpacityBrush}"
                                                                              DisplayMemberPath="Name"
                                                                              MinWidth="150"
                                                                              MaxWidth="512"
                                                                              SelectionChanged="CheckComboBox_SelectionChanged"
                                                                              ShowSelectAllButton="True"
                                                                              hc:InfoElement.Necessary="True"
                                                                              hc:TitleElement.Title="Các thiết bị được hỗ trợ"
                                                                              Style="{DynamicResource CheckComboBoxPlus}">
                                                            </hc:CheckComboBox>
                                                        </Grid>
                                                    </StackPanel>

                                                </Grid>

                                            </Grid>
                                        </StackPanel>
                                    </Grid>
                                    <Grid>
                                        <TextBox HorizontalAlignment="Left"
                                                 Margin="10"
                                                 Text="{Binding CurrentItemForExport.Description}"
                                                 Style="{DynamicResource TextBoxExtend}" />
                                    </Grid>
                                </StackPanel>

                            </Grid>
                            <!--downloadbutton-->
                            <Grid Grid.Column="2">
                                <Button Margin="20"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Top"
                                        Padding="2"
                                        Width="150"
                                        Height="30"
                                        Foreground="{DynamicResource ReverseTextBrush}"
                                        BorderThickness="0"
                                        Content="Export"
                                        Command="{Binding ExportCurrentOnlineItemToFilesCommand}"
                                        CommandParameter="export">
                                    <Button.Background>
                                        <SolidColorBrush Color="{Binding Color, Source={StaticResource PrimaryBrush}}"
                                                         Opacity="1" />
                                    </Button.Background>
                                </Button>
                            </Grid>
                        </Grid>

                    </Border>
                </hc:TransitioningContentControl>
            </Grid>
            <!--Preview-->
            <Grid>
                <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">


                    <Border CornerRadius="7"
                            Background="{DynamicResource DarkOpacityBrush}"
                            Margin="10">
                        <StackPanel>

                            <Button Command="{Binding OpenImageSelectorCommand}"
                                    CommandParameter="screenshot"
                                    HorizontalAlignment="Right"
                                    hc:IconElement.Geometry="{DynamicResource AddGeometry}"
                                    Content="Add image" />
                            <ItemsControl ItemsSource="{Binding OnlineItemScreenShotCollection}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Image Margin="20"
                                               Width="200"
                                               Height="200"
                                               Stretch="Uniform"
                                               Source="{Binding .}" />
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>


                            </ItemsControl>
                        </StackPanel>
                    </Border>
                </hc:TransitioningContentControl>
            </Grid>
            <!--Description-->
            <Grid>
                <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">


                    <Border CornerRadius="7"
                            Background="{DynamicResource DarkOpacityBrush}"
                            Margin="10">
                        <StackPanel>

                            <Grid>
                                <TextBlock Margin="20,15,0,0"
                                           HorizontalAlignment="Left"
                                           VerticalAlignment="Top"
                                           Text="Description"
                                           Style="{DynamicResource TextBlockSubTitleBold}" />
                            </Grid>
                            <hc:Divider Margin="0,15" />

                            <Grid>


                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <mdxam:MarkdownScrollViewer VerticalScrollBarVisibility="Auto"
                                                            Margin="15"
                                                            Markdown="{Binding OnlineItemMarkdownDescription,Mode=TwoWay}">
                                    <mdxam:MarkdownScrollViewer.MarkdownStyle>
                                        <Style TargetType="FlowDocument"
                                               BasedOn="{x:Static mdxam:MarkdownStyle.Standard}">
                                            <Style.Resources>
                                                <Style TargetType="Paragraph">

                                                    <Style.Triggers>
                                                        <Trigger Property="Tag"
                                                                 Value="Heading2">
                                                            <Setter Property="FontSize"
                                                                    Value="30" />
                                                            <Setter Property="Foreground"
                                                                    Value="{DynamicResource PrimaryTextBrush}" />
                                                            <Setter Property="FontWeight"
                                                                    Value="Light" />
                                                            <Setter Property="Margin"
                                                                    Value="0" />
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Style.Resources>
                                        </Style>
                                    </mdxam:MarkdownScrollViewer.MarkdownStyle>

                                </mdxam:MarkdownScrollViewer>
                                <Grid Grid.Column="1">
                                    <TextBox AcceptsReturn="True"
                                             Text="{Binding OnlineItemMarkdownDescription,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                                </Grid>
                            </Grid>
                        </StackPanel>
                    </Border>
                </hc:TransitioningContentControl>
            </Grid>
