            <!--Header-->
            <Grid>
                <hc:TransitioningContentControl TransitionMode="Bottom2TopWithFade">


                    <Border MinHeight="220"
                            CornerRadius="7"
                            Background="{DynamicResource RegionBrush}"
                            Margin="10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <!--thumb-->
                            <Grid Grid.Column="0">
                                <Border VerticalAlignment="Top"
                                        HorizontalAlignment="Left"
                                        Margin="20,20,10,10"
                                        CornerRadius="7"
                                        Width="150"
                                        Height="200"
                                        Background="Transparent">
                                    <Grid>
                                        <Grid>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed">
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=DataContext.CurrentItemForExport.AvatarType, RelativeSource={RelativeSource AncestorType={x:Type local:OnlineItemExporterView}}}"
                                                                     Value="{x:Static enums:OnlineItemAvatarTypeEnum.Image}">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible">
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Image Stretch="Uniform"
                                                   Source="{Binding OnlineItemAvatar}"
                                                   Width="150"
                                                   Height="150">
                                            </Image>
                                            <Button Opacity="0.5"
                                                    Width="50"
                                                    Height="50"
                                                    Command="{Binding OpenImageSelectorCommand}"
                                                    CommandParameter="avatar"
                                                    HorizontalAlignment="Center"
                                                    hc:IconElement.Geometry="{DynamicResource AddGeometry}" />
                                        </Grid>
                                        <Grid>
                                            <Grid.Style>
                                                <Style TargetType="Grid">
                                                    <Setter Property="Visibility"
                                                            Value="Collapsed">
                                                    </Setter>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Path=DataContext.CurrentItemForExport.AvatarType, RelativeSource={RelativeSource AncestorType={x:Type local:OnlineItemExporterView}}}"
                                                                     Value="{x:Static enums:OnlineItemAvatarTypeEnum.Gravatar}">
                                                            <Setter Property="Visibility"
                                                                    Value="Visible">
                                                            </Setter>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <hc:Gravatar Width="150"
                                                         Height="150"
                                                         Id="{Binding CurrentItemForExport.Name}">
                                            </hc:Gravatar>
                                        </Grid>
                                    </Grid>
                                </Border>
                            </Grid>

                            <!--info-->
                            <Grid Grid.Column="1">
                                <StackPanel>
                                    <Grid>
                                        <TextBox HorizontalAlignment="Left"
                                                 Margin="10,20,0,5"
                                                 FontSize="25"
                                                 FontWeight="SemiBold"
                                                 Text="{Binding CurrentItemForExport.Name,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                 Style="{DynamicResource TextBoxExtend}" />
                                    </Grid>
                                    <Grid>
                                        <TextBox HorizontalAlignment="Left"
                                                 Margin="10,0,0,0"
                                                 Text="{Binding CurrentItemForExport.Owner}"
                                                 Style="{DynamicResource TextBox.Small}"
                                                 Foreground="{DynamicResource PrimaryBrush}" />
                                    </Grid>
                                    <Grid>
                                        <TextBox HorizontalAlignment="Left"
                                                 Margin="10,0,0,0"
                                                 Text="{Binding CurrentItemForExport.Version}"
                                                 Style="{DynamicResource TextBox.Small}"
                                                 Foreground="{DynamicResource PrimaryBrush}" />
                                    </Grid>
                                    <Grid>
                                        <StackPanel Margin="10,0"
                                                    Orientation="Horizontal">
