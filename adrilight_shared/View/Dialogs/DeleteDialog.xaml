<UserControl x:Class="adrilight_shared.View.Dialogs.DeleteDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:adrilight_shared.View.Dialogs"
             xmlns:viewmodel="clr-namespace:adrilight_shared.ViewModel"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:properties="clr-namespace:adrilight_shared.Properties"
             d:DataContext="{d:DesignInstance Type=viewmodel:DeleteDialogViewModel}"
             mc:Ignorable="d" 
             Background="{DynamicResource RegionBrush}"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <StackPanel Margin="0,0,0,35">
            <TextBlock Margin="5,5,5,30"
                       Style="{DynamicResource TextBlockLarge}"
                       Text="{Binding Header}" />
            <Grid Height="20" />
            <Path HorizontalAlignment="Center"
                  Stretch="Uniform"
                  Width="50"
                  Height="50"
                  Margin="10"
                  Data="{DynamicResource delete}"
                  Fill="{DynamicResource DangerBrush}" />
            <Grid Height="20" />
            <TextBlock Margin="10" FontWeight="SemiBold" FontSize="13" HorizontalAlignment="Center"
                       Text="{Binding Content}" />
            <TextBlock Margin="0" Style="{DynamicResource TextBlockDefaultSecLight}"
                       HorizontalAlignment="Center"
                       Text="{x:Static properties:Resources.DeleteDialog_DeleteConfirm_info}" />
        </StackPanel>
        <Grid Grid.Row="2">
            <StackPanel HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Click="Button_Cancel_Click"
                        Style="{DynamicResource _lowProfileDefaultButton}"
                        Margin="10,10,10,20"
                        Content="{x:Static properties:Resources.Button_Cancel_Content}">

                </Button>
                <Button Click="Button_OK_Click"
                        Style="{DynamicResource ButtonPrimary}"
                        Foreground="{DynamicResource RegionBrush}"
                        Width="72"
                        Margin="10,10,20,20"
                        Grid.Column="1"
                        Content="{x:Static properties:Resources.Button_OK_Content}">
                </Button>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>
